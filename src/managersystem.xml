<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
	
<struts>


	<package name="managersystemPublic" namespace="/" extends="managersystemGlobal">
		<action name="Home" class="com.clps.managersystem.action.Home">
			<result >/WEB-INF/jsp/home.jsp</result>
		</action>
		
		<action name="LoginForm" >
			<result>/WEB-INF/jsp/login.jsp</result>
		</action>
		
		<action name="Login" class="com.clps.managersystem.action.Login">
			<result type="redirectAction" name="success">Home</result>
			<result name="input">/WEB-INF/jsp/login.jsp</result>
		</action>
	
	</package>
</struts>